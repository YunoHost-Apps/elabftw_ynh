#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source /usr/share/yunohost/helpers

#=================================================
# INITIALIZE AND STORE SETTINGS
#=================================================

secret_key=$(ynh_string_random --length=137)
ynh_app_setting_set --key="secret_key" --value="$secret_key"

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

# Download, check integrity, uncompress and patch the source from app.src
ynh_setup_source --dest_dir="$install_dir/docker/" --source_id="docker"

mkdir -p "$install_dir/live/"
rsync -a "$install_dir/docker/elabftw/" "$install_dir/live/"
ynh_safe_rm "$install_dir/docker"

mkdir -p "$install_dir/live/"{cache,uploads}

# Fix Unknown collation: 'utf8mb4_0900_ai_ci'
for f in $install_dir/live/src/sql/*.sql ; do
    ynh_replace --match="utf8mb4_0900_ai_ci" --replace="utf8mb4_general_ci" --file="$f"
done

chmod -R o-rwx "$install_dir"
chown -R "$app:www-data" "$install_dir"

#=================================================
# APP INITIAL CONFIGURATION
#=================================================
ynh_script_progression "Adding $app's configuration files..."

pushd "$install_dir/live"
    secret_key=$(php$php_version $install_dir/live/bin/install genkey)
    ynh_app_setting_set --key="secret_key" --value="$secret_key"

    ynh_config_add --template="config.php" --destination="$install_dir/live/config.php"
    ynh_exec_as_app php$php_version "bin/install" start -q
popd

ynh_script_progression "Configuring LDAP and emails..."

ynh_config_add --template="sql.template" --destination="$install_dir/ldap_sql"
ynh_mysql_db_shell < "$install_dir/ldap_sql"
ynh_safe_rm "$install_dir/ldap_sql"

# Create a cron file
ynh_config_add --template="cron" --destination="/etc/cron.d/$app"

chmod -R o-rwx "$install_dir"
chown -R "$app:www-data" "$install_dir"

#=================================================
# SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Adding system configurations related to $app..."

# Create a dedicated NGINX config
ynh_config_add_nginx

# Create a dedicated PHP-FPM config
ynh_config_add_phpfpm

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
